 "info": {"version": 1, "license": "GPL-2.1-or-later", "author": "Cyril Hrubis <metan@ucw.cz>"},
 "layout": {
  "rows": 2,
  "align": "fill",
  "rfill": "1, 0",
  "widgets": [
   {"align": "fill", "type": "pixmap", "uid": "board", "w": 100, "h": 100},
   {
    "type": "frame",
    "title": "Settings",
    "halign": "fill",
    "widget": {
     "cols": 14,
     "halign": "fill",
     "cfill": "14 * 0",
     "cpadf": "1, 4*0, 1, 2*0, 1, 0, 1, 0, 1, 0, 1",
     "widgets": [
      {"type": "label", "text": "W"},
      {"type": "spinner", "val": 50, "uid": "w", "on_event": "resize"},
      {"type": "label", "text": "x"},
      {"type": "label", "text": "H"},
      {"type": "spinner", "val": 50, "uid": "h", "on_event": "resize"},
      {"type": "button", "btype": "step_forward", "on_event": "step"},
      {"type": "button", "btype": "play", "on_event": "run"},
      {"type": "button", "btype": "pause", "on_event": "stop"},
      {"type": "button", "btype": "clear", "on_event": "clear"},
      {"type": "button", "btype": "randomize", "on_event": "randomize"},
      {"type": "button", "btype": "zoom_in", "on_event": "zoom_in"},
      {"type": "button", "btype": "zoom_out", "on_event": "zoom_out"},
      {"type": "button", "btype": "save", "on_event": "file_save"},
      {"type": "button", "btype": "open", "on_event": "file_open"}
     ]
    }
   }
  ]
 }
}
